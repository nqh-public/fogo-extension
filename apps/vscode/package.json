{
  "name": "vscode",
  "displayName": "Fogó",
  "description": "DOM element picker with clipboard export for AI workflows",
  "version": "0.1.0",
  "publisher": "nqh",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "fogo.startPreview",
        "title": "Fogó: Start Preview"
      },
      {
        "command": "fogo.togglePicker",
        "title": "Toggle Element Picker",
        "icon": "$(target)"
      },
      {
        "command": "fogo.reloadPreview",
        "title": "Reload Preview"
      }
    ],
    "menus": {
      "webview/title": [
        {
          "command": "fogo.togglePicker",
          "when": "activeWebviewPanelId == 'fogo.preview'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "dev": "pnpm build --watch",
    "typecheck": "tsc --noEmit",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@fogo/core": "workspace:*"
  }
}
