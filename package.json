{
  "name": "fogo-extension",
  "version": "1.0.0",
  "private": true,
  "description": "Fog√≥ - DOM element picker for AI workflows (VSCode + Chrome extensions)",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/nqh-public/fogo-extension.git"
  },
  "keywords": [
    "dom-picker",
    "vscode-extension",
    "chrome-extension",
    "ai-workflow",
    "element-selector"
  ],
  "author": "NQH",
  "license": "MIT",
  "scripts": {
    "build": "pnpm --filter '@fogo/*' build && pnpm --filter 'vscode' build && pnpm --filter 'chrome' build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.mjs --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,mjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,mjs,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsinspect": "^0.12.7",
    "lint-staged": "^16.2.6",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}
